<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="7dp"
    android:elevation="8dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="8dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cartStuff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/drinkimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_logo_cart_empty_straight_lines_bold_svg" />

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/linera"
                android:layout_toRightOf="@+id/drinkimage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BRAND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Please wait"
                    android:textColor="@color/material_on_background_emphasis_medium"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/NAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Loading"
                    android:textColor="@android:color/primary_text_light_nodisable"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/SIZE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Size"
                    android:textColor="@color/material_on_surface_emphasis_medium"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/CASH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Ksh"
                    android:textColor="@color/material_on_surface_emphasis_medium"
                    android:textSize="17sp"
                    android:textStyle="normal" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/STATE"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    android:text="Nectar"
                    android:textSize="15sp"
                    app:chipIcon="@drawable/ic_logo_cart_empty_straight_lines_bold_svg"
                    app:chipIconEnabled="true"
                    app:chipIconSize="15dp"
                    app:iconStartPadding="5dp" />


            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.9dp"
                android:layout_below="@+id/linear1"
                android:layout_margin="3dp"
                android:background="@color/colorPrimary" />

            <RelativeLayout
                android:id="@+id/selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view">

                <TextView
                    android:id="@+id/center"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/text_back_purple"
                    android:gravity="center"
                    android:inputType="number"
                    android:lines="1"
                    android:text=""

                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/DELIVERY"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checkable="false"
                    android:text="INTRANSIT"
                    android:textSize="15sp"
                    app:chipIcon="@drawable/ic_logo_cart_empty_straight_lines_bold_svg"
                    app:chipIconEnabled="true"
                    app:chipIconSize="15dp"
                    app:chipIconTint="@color/colorPrimaryDark"
                    app:iconStartPadding="5dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cash_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ksh"
                    android:textColor="@color/material_on_background_emphasis_medium"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PRICE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:clickable="true"
                    android:text="0"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </RelativeLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cartStuff"
            android:layout_alignBottom="@id/cartStuff"
            android:visibility="invisible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/placeholder" />
        </com.facebook.shimmer.ShimmerFrameLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
