<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/okay"
        android:orientation="vertical"
        tools:ignore="DuplicateIds">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/state"
                    android:text="EXTREME TV BLACK"
                    android:textColor="@color/material_on_background_emphasis_high_type"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/state"
                    android:text="Brand: Hisense"
                    android:textColor="@color/material_on_background_emphasis_medium"
                    android:textSize="15sp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/state"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:padding="5dp"
                    android:text="BRAND NEW"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:chipIcon="@drawable/ic_baseline_storefront_24"
                    app:chipIconTint="@color/yellow"
                    app:iconStartPadding="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="KSH 5000"
                        android:textColor="@color/design_default_color_on_secondary"
                        android:textSize="21sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/previos"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_marginRight="16dp"
                            android:checked="true"
                            android:text="kes 500"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="2.1dp"
                            android:layout_alignLeft="@id/previos"
                            android:layout_alignRight="@id/previos"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_blue_gradient" />
                    </RelativeLayout>

                </LinearLayout>

                <com.google.android.material.chip.Chip
                    android:id="@+id/instock"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="3dp"
                    android:layout_marginRight="16dp"
                    android:checked="true"
                    android:padding="5dp"
                    android:text="instock 7"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:chipIcon="@drawable/ic_baseline_storefront_24"
                    app:chipIconTint="@color/colorPrimaryDark" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/n1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="3dp"
                            android:src="@drawable/ic_baseline_star_border_24" />

                        <ImageView
                            android:id="@+id/n2"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="3dp"
                            android:src="@drawable/ic_baseline_star_border_24" />

                        <ImageView
                            android:id="@+id/n3"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="3dp"
                            android:src="@drawable/ic_baseline_star_border_24" />

                        <ImageView
                            android:id="@+id/n4"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="3dp"
                            android:src="@drawable/ic_baseline_star_border_24" />

                        <ImageView
                            android:id="@+id/n5"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_margin="3dp"
                            android:src="@drawable/ic_baseline_star_border_24" />


                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:checked="true"
                        android:text="5 stars" />
                </LinearLayout>

                 </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:text="NOTE THIS"
                        android:textColor="@color/material_on_background_disabled"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/ic_baseline_local_shipping_24"
                                app:tint="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="1dp"
                                android:layout_toRightOf="@id/img"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/deliverInfo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="5dp"
                                    android:drawableRight="@drawable/ic_baseline_help_outline_24"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/colorPrimaryDark"
                                    android:text="DELIVERY INFO"
                                    android:textColor="@color/material_on_background_emphasis_high_type"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/delivery"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="3dp"
                                    android:text="@string/delivery_ku"
                                    android:textColor="@color/material_on_background_emphasis_medium"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/ic_baseline_restore_24"
                                app:tint="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="1dp"
                                android:layout_toRightOf="@id/img1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="5dp"
                                    android:drawableRight="@drawable/ic_baseline_help_outline_24"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/colorPrimaryDark"
                                    android:text="RETURN POLICY"
                                    android:textColor="@color/material_on_background_emphasis_high_type"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/return_policy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="3dp"
                                    android:text="@string/return_policy"
                                    android:textColor="@color/material_on_background_emphasis_medium"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/ic_baseline_security_24"
                                app:tint="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="1dp"
                                android:layout_toRightOf="@id/img2"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="5dp"
                                    android:drawableRight="@drawable/ic_baseline_help_outline_24"
                                    android:drawablePadding="5dp"
                                    android:drawableTint="@color/colorPrimaryDark"
                                    android:text="WARRANTY"
                                    android:textColor="@color/material_on_background_emphasis_high_type"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/waranty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="3dp"
                                    android:text="@string/waranty"
                                    android:textColor="@color/material_on_background_emphasis_medium"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
