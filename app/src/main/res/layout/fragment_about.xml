<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_About">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularimageview.CircularImageView

                        android:id="@+id/circularImageView"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_logo_cart_empty_straight_lines_bold_svg"
                        app:civ_border="true"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="1dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="@color/colorPrimaryDark"
                        app:civ_shadow_radius="1dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_baseline_help_outline_24"
                        app:tint="@color/colorPrimary" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_toRightOf="@id/img"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Company"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nectar Mobile Softworks"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorPrimary" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/ic_baseline_code_24"
                        app:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img2"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="4dp"
                        android:layout_toRightOf="@id/img2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/phone"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/colorPrimary"
                            android:text="@string/phone_adress"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            app:drawableLeftCompat="@drawable/ic_baseline_call_24"
                            app:strokeColor="@color/colorPrimaryDark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/instagram"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/colorPrimary"
                            android:text="instagram"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            app:drawableLeftCompat="@drawable/ic_18769577301553666141"
                            app:strokeColor="@color/colorPrimaryDark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/email"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="200dp"

                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/colorPrimary"
                            android:text="email"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            app:drawableLeftCompat="@drawable/ic_baseline_alternate_email_24"
                            app:strokeColor="@color/colorPrimaryDark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/facebook"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/colorPrimary"
                            android:text="facebook"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            app:drawableLeftCompat="@drawable/ic_facebook"
                            app:strokeColor="@color/colorPrimaryDark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/whatsapp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/colorPrimary"
                            android:text="whatsapp"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            app:drawableLeftCompat="@drawable/ic_whatsapp"
                            app:strokeColor="@color/colorPrimaryDark" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/web"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/colorPrimary"
                            android:text="web"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            app:drawableLeftCompat="@drawable/ic_baseline_web_24"
                            app:strokeColor="@color/colorPrimaryDark" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/youtube"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/colorPrimary"
                            android:text="YOU TUBE"
                            android:textColor="@android:color/widget_edittext_dark"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            app:drawableLeftCompat="@drawable/ic_baseline_ondemand_video_24"
                            app:strokeColor="@color/colorPrimaryDark" />
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</FrameLayout>