<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/colorPrimary"
    app:strokeWidth="1dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/drinkimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_logo_cart_empty_straight_lines_bold_svg" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/drinkimage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/BRAND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium"
                android:text="CHROME"
                android:textColor="@color/material_on_background_emphasis_medium"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium"
                android:text="Clear Vodka"
                android:textColor="@android:color/primary_text_light_nodisable"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SIZE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-medium"
                android:text="750ml"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:textSize="13sp"
                android:textStyle="normal" />

            <com.google.android.material.chip.Chip
                android:id="@+id/STATE"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="BRAND NEW"/>


        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.9dp"
            android:layout_below="@+id/linear1"
            android:layout_margin="3dp"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view">

            <ImageView
                android:id="@+id/reduce"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toLeftOf="@+id/center"
                android:src="@drawable/ic_baseline_chevron_left_24" />

            <TextView
                android:id="@+id/center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/text_back_purple"
                android:padding="3dp"
                android:text="10"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/increase"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/center"
                android:src="@drawable/ic_baseline_chevron_right_24" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_delete_outline_24"
            app:tint="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="3dp">


            <LinearLayout
                android:id="@+id/linera"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cash_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ksh"
                    android:textColor="@color/material_on_background_emphasis_medium"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cashIndividual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:clickable="true"
                    android:text="0"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="25sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linera"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>